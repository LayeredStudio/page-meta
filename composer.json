{
    "name": "layered/page-meta",
    "description": "Get detailed info for any URL on the internet! Scraper for HTML, OpenGraph, Schema data",
    "type": "library",
    "license": "MIT",
    "keywords": ["scraper", "url-preview", "link-preview", "opengraph", "embed", "oembed", "schema"],
    "authors": [
        {
            "name": "Andrei Igna",
            "email": "andrei@laye.red"
        }
    ],
    "require": {
        "fabpot/goutte": "~4.0",
        "symfony/event-dispatcher": "~5.1"
    },
    "autoload": {
        "psr-4": {
            "Layered\\PageMeta\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    }
}
